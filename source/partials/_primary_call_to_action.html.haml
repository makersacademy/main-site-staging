- backgrounded ||= true
- page ||= :default
- if page == :employers

  %section.hero--apply{style: backgrounded ? "background-image: url(#{image_path("backgrounds/newpairing.jpg")});": ""}
    .container
      .centered-row
        .column
          %h2 Join Us
          %p It costs nothing, until you find the right person.
      .button-row
        %p
          = link_to "Have Hiring Questions?", "http://bit.ly/meetWB", class: "button button--horizontal"
          = link_to "Hire Developers", "/employers/contact.html", class: "employers-button button button--vertical button--large", target: "_blank"
          = link_to "Apply to Study", config.apply_url, class: "button button--horizontal"
- else

  %section.hero--apply.no-padding{style: backgrounded ? "background-image: url(#{image_path("backgrounds/newpairing.jpg")});": ""}
    .container
      .centered-row
        .column
          %h2 Apply Now
          %p We run cohorts every 4 weeks and applications are highly competitive. Apply early to avoid disappointment.
      .button-row
        %p
          - if page == :payment
            = link_to "See our Graduates", "/graduates.html", class: "button button--horizontal"
          - else
            = link_to "Payment Options", "/payment.html", class: "button button--horizontal"

          = link_to "Apply", "/apply.html", class: "button button--vertical button--large apply-button", data: {track: "Clicked Apply Test Button"}

          - if page == :about_us
            = link_to "See our Curriculum", "/curriculum.html", class: "button button--horizontal"
          - else
            = link_to "Learn More", "/about-us.html", class: "button button--horizontal"

        .centered-row
          %h2 Want to chat?
          %h2
            %a#main_phone_number.no-underline{ href: "tel:#{ data.static.main_phone_number }" }= data.static.main_phone_number
